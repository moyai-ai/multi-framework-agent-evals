# OpenAI Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here
MODEL_NAME=gpt-4-turbo-preview
TEMPERATURE=0.3

# LangSmith Configuration (Required for observability)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=your-langsmith-pr-here

# Note: The code sets both LANGSMITH_ and LANGCHAIN_ environment variables
# for maximum compatibility with LangChain and LangSmith SDK

# GitHub Configuration (Optional, MCP may provide access)
GITHUB_TOKEN=your-github-token-here

# Debug Settings
DEBUG=false
LOG_LEVEL=INFO

# OpenGrep Configuration
USE_MOCK_OPENGREP=false
OPENGREP_PATH=opengrep

# Analysis Settings
MAX_FILES_PER_ANALYSIS=50
MAX_FILE_SIZE_KB=500
